@model DrivingSclApp.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "تغيير الإعدادات وكلمة السر";
}
<section id="ChangePasswordForm">
    <div class="row">

        @using (Html.BeginForm())
        {
            <div class="col-sm-12">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(m => m.Type, new { @Value = "2" })
                <div class="panel panel-primary" style="margin-bottom:0px;">
                    <div class="panel-heading">
                        <h3>تغيير كلمة المرور</h3>
                    </div>
                    <div class="panel-body">
                        <table>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.OldPassword)
                                </th>
                                <td>
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                </td>
                            </tr>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.NewPassword)
                                </th>
                                <td>
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.NewPasswordConfirmed)
                                </th>
                                <td>
                                    @Html.PasswordFor(m => m.NewPasswordConfirmed, new { @class = "form-control" })
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</section>
